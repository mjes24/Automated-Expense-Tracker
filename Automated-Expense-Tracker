import sqlite3

# Connect to SQLite database (or create it if it doesn't exist)
conn = sqlite3.connect("expenses.db")
cursor = conn.cursor()

# Create table if not exists
cursor.execute('''CREATE TABLE IF NOT EXISTS expenses (
                    id INTEGER PRIMARY KEY AUTOINCREMENT,
                    date TEXT,
                    category TEXT,
                    amount REAL)''')
conn.commit()

def add_expense():
    date = input("ğŸ“… Enter date (YYYY-MM-DD): ")
    category = input("ğŸ“‚ Enter category (Food, Transport, etc.): ")
    amount = float(input("ğŸ’° Enter amount: "))

    cursor.execute("INSERT INTO expenses (date, category, amount) VALUES (?, ?, ?)", (date, category, amount))
    conn.commit()
    print("âœ… Expense added successfully!")

def view_expenses():
    cursor.execute("SELECT * FROM expenses")
    expenses = cursor.fetchall()

    if not expenses:
        print("ğŸ“Œ No expenses recorded.")
        return

    print("\nğŸ“Š Your Expenses:")
    for expense in expenses:
        print(f"{expense[1]} | {expense[2]} | {expense[3]}â‚¬")
    
    total = sum(expense[3] for expense in expenses)
    print(f"\nğŸ’° Total Spent: {total}â‚¬")

while True:
    print("\nğŸ“Œ Expense Tracker Menu:")
    print("1. Add Expense")
    print("2. View Expenses")
    print("3. Exit")
    
    choice = input("Choose an option (1-3): ")

    if choice == "1":
        add_expense()
    elif choice == "2":
        view_expenses()
    elif choice == "3":
        print("ğŸ‘‹ Exiting program. Goodbye!")
        break
    else:
        print("âš ï¸ Invalid choice. Please enter 1-3.")

# Close the database connection
conn.close()
